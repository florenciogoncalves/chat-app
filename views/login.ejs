<%- include('./partials/header.ejs') %>
<div class="m-auto h-100 d-flex justify-content-center align-items-center">
  <div class="card text-start col-4">
    <div class="card-body px-5 py-4">
      <h4 class="card-title mb-5 mt-2">Login</h4>
      <div class="d-flex flex-column">
        <form action="/authenticate/login" method="post">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              placeholder="Seu email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input
              type="text"
              class="form-control"
              name="password"
              id="password"
              placeholder="********"
              required
            />
          </div>
          <button type="submit" class="btn btn-success col-12 py-2 mt-3">
            Entrar
          </button>
          <div class="mt-3 text-center">
            NÃ£o possui uma conta? <a href="/register">Cadastre-se</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
